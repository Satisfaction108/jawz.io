{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": false,
    "noEmit": false,
    "outDir": "client/dist",
    "rootDir": "client",
    "resolveJsonModule": true
  },
  "include": [
    "client/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "client/dist",
    "server/**/*"
  ]
}
